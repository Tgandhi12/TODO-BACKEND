{
  "compilerOptions": {
    "target": "ES6",                          // Specify ECMAScript target version
    "module": "commonjs",                     // Specify module code generation
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enable compatibility for CommonJS modules
    "skipLibCheck": true,                     // Skip type-checking of declaration files
    "outDir": "./dist",                       // Specify the output directory for compiled files
    "typeRoots": ["./node_modules/@types", "./src/types"], // Include custom type definitions
    "resolveJsonModule": true,                // Include JSON modules
    "baseUrl": "./",                          // Base directory for non-relative module imports
    "paths": {
      "*": ["src/*"]                          // Map for clean module imports
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types.d.ts"  // Include the custom type definitions
  ],
  "exclude": [
    "node_modules",                           
    "dist"                                    
  ]
}
